<div class="bjui-pageHeader" style="background:#FFF;">

    <label class="control-label">日期</label>
    <input type="text" name="dateTime" id="startdateTime" value="" data-toggle="datepicker" size="13" />
    <label class="control-label">单据编号</label>
    <input type="text" id="txtNo" size="15" />
    <label class="control-label">采购人</label>
    <input type="text" id="txtPerson_conIn" size="15" />
    <label class="control-label">表单状态</label>
    <select id="selState" data-toggle="selectpicker">
        <option value="1" selected="selected">未提交</option>
        <option value="2">已提交</option>
    </select>
    <button type="button" id="btnSearch" class="btn btn-success">查询</button>
</div>
<div class="bjui-pageContent">
    <table id="tabPURCHASE" data-height="100%" class="table table-bordered table-striped"></table>
</div>
<script type="text/javascript">
    $(function () {
        $.CurrentNavtab.find("#btnSearch").click(function () {
            var url = '/PURCHASE/GetAllPURCHASEJson?FDate=' + $.CurrentNavtab.find("#startdateTime").val() + "&FCode=" + $.CurrentNavtab.find("#txtNo").val() + "&FStatus=" + $.CurrentNavtab.find("#selState").val();
            maingrid.datagrid("reload", { dataUrl: url });
        });

        var wareHouseLst;
        var personlst;
        $(this).bjuiajax("doAjax", {
            url: "/Common/GetWareHoseJson?FCATEGORY=1",
            callback: function (json) {
                wareHouseLst = json;
            }
        });
        $(this).bjuiajax("doAjax", {
            url: "/Common/GetPersonJson?FSTATUS=2",
            callback: function (json) {
                personlst = json;
            }
        });
        maingrid = $.CurrentNavtab.find("#tabPURCHASE").datagrid({
            gridTitle: '采购入库登记列表',
            showToolbar: true,
            toolbarItem: 'add,save,|,cancel',
            addLocation: 'first',
            dataUrl: '/PURCHASE/GetAllPURCHASEJson',
            dataType: 'json',
            filterThead: false,
            columns: [
                {
                    name: 'FGUID',
                    label: 'FGUID',
                    align: 'center',
                    hide: true,
                    width: 50

                },
                {
                    name: 'FDATE',
                    label: '日期',
                    type: 'date',
                    align: 'center',
                    width: 110,
                    pattern: 'yyyy-MM-dd'
                },
                {
                    name: 'FCODE',
                    label: '单据编号',
                    add: false,
                    align: 'center',
                    width: 100,
                },
                {
                    name: 'FWAREHOUSEID',
                    label: '仓库',
                    type: 'select',
                    items: function () {
                        return wareHouseLst;
                    },
                    align: 'center',
                    width: 80,
                    render: $.datagrid.renderItem
                },
                 {
                     name: 'FPERSONID',
                     label: '采购人',
                     type: 'select',
                     items: function () {
                         return personlst;
                     },
                     align: 'center',
                     width: 80,
                     render: $.datagrid.renderItem
                 },
                {
                    name: 'FMEMO',
                    label: '摘要',
                    align: 'center',
                    width: 80
                },
                {
                    name: 'FCREATEID',
                    label: '填表人',
                    add: false,
                    align: 'center',
                    width: 80
                },
                {
                    name: 'FCREATETIME',
                    label: '填表日期',
                    add: false,
                    align: 'center',
                    width: 80
                },
                {
                    name: 'FSTATUS',
                    label: '表单状态',
                    type: 'select',
                    items: [{ '1': '未提交' }, { '2': '已提交' }],
                    add: false,
                    align: 'center',
                    width: 80,
                    render: $.datagrid.renderItem
                }
            ],
            contextMenuB: true,
            editUrl: '/PURCHASE/EditPURCHASE',
            editMode: 'inline',
            fullGrid: true,
            showLinenumber: true,
            paging: true,
            height: '100%',
            showCheckboxcol: false,
            onDblClickRow: function (rowData, index) {
                var outWare = $(this).GetSelectText(wareHouseLst, rowData.FWAREHOUSEID);
                var jsonStr = JSON.stringify(rowData);
                $(this).navtab({
                    id: 'PURCHASEInDetail', url: '/PURCHASE/PURCHASEInDetail', title: '采购入库登记明细',
                    data: { rowData: jsonStr, outWare: outWare }, fresh: true
                });
            }
        });
    });
</script>