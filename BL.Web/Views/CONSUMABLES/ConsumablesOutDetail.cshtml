        //});
        var fparentId = '@Model.FGUID';
        var FINWAREHOUSEID = '@Model.FWAREHOUSEID';
        var Fdate = '@Convert.ToDateTime(Model.FDATE).ToString("yyyy-MM-dd")';
        var wareHouseLst;
