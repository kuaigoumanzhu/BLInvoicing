                },
                {
                    name: 'FMEMO',
                    label: '备注',
                    align: 'center',
                    width: 110
                }
            ],
            contextMenuB: true,
            editUrl: '/CONSUMABLES/EditConsumablesOutDetail?FPARENTID=' + fparentId,
            delUrl: '/CONSUMABLES/DelCONSUMABLES',
            editMode: 'inline',
            showTfoot: true,
            inlineEditMult:true,
            fullGrid: true,
            showLinenumber: true,
            paging: false,
            height: '100%',
            showCheckboxcol: false
